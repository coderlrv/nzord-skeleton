{% extends "layout.html.twig" %}

{% from 'base/widget.twig' import appLink as alink %}  
{% from 'base/buttons.twig' import btnAppArray %}

{% block page_title %}
	<h1 title="System">
        <i class="fa fa-cog"></i> System
    </h1>
{% endblock %}

{% block content %}
    <div class="box-body">
    	<div class="col-xs-12 text-right">
            {{ alink([{ 'link':'mdlModuloConfig()', 'label':'Configuração','title':'Configurações do modulo','js':true,'img':'cogs','btn':'default btn-sm' }]) }}
        </div>
        <div class="col-xs-12 col-md-12 nopadding-width" style="text-align:center;margin-bottom:20px;margin-top:20px;">
            {{ btnAppArray(buttons) }}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script>
    function mdlModuloConfig(){
    	sysModalBoxJs('Gerenciamento das Configurações do Modulo','app/system/config/form',null,'mdlConfig');
    }
    </script>
{% endblock %}
